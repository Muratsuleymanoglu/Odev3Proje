<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Odev3Proje.LoginPage"
             Title="Giriş Yap"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#512BD4" Offset="0.1" />
            <GradientStop Color="#8E2DE2" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="*, Auto, *">
        <Frame Grid.Row="1" Margin="30,0" CornerRadius="20" HasShadow="True" Padding="25" BackgroundColor="White" BorderColor="Transparent">
            <VerticalStackLayout Spacing="15">
                <Label x:Name="lblBaslik" Text="GİRİŞ YAP" FontSize="26" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#333" Margin="0,0,0,10"/>

                <Frame Padding="0" BackgroundColor="#F5F5F5" CornerRadius="10" BorderColor="Transparent" HeightRequest="50">
                    <Entry x:Name="entEmail" Placeholder="E-Posta Adresi" Keyboard="Email" TextColor="#333" PlaceholderColor="#999" Margin="10,0"/>
                </Frame>

                <Frame Padding="0" BackgroundColor="#F5F5F5" CornerRadius="10" BorderColor="Transparent" HeightRequest="50">
                    <Entry x:Name="entPassword" Placeholder="Şifre" IsPassword="True" TextColor="#333" PlaceholderColor="#999" Margin="10,0"/>
                </Frame>

                <Button x:Name="btnAction" Text="GİRİŞ YAP" FontAttributes="Bold" BackgroundColor="#512BD4" TextColor="White" CornerRadius="25" HeightRequest="50" Margin="0,10,0,0" Clicked="OnActionClicked"/>

                <Label x:Name="lblSwitch" Text="Hesabım yok mu? Kaydol" TextColor="#512BD4" FontSize="14" HorizontalOptions="Center" TextDecorations="Underline" Margin="0,5,0,0">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSwitchModeTapped"/>
                    </Label.GestureRecognizers>
                </Label>
                <ActivityIndicator x:Name="loading" IsRunning="False" Color="#512BD4"/>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>