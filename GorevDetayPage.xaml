<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Odev3Proje.GorevDetayPage"
             Title="Görev Detayı"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#121212}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <VerticalStackLayout Spacing="5">
                <Label Text="Başlık" FontAttributes="Bold" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                <Frame Padding="0" CornerRadius="8" BorderColor="Gray" HasShadow="False"
                       BackgroundColor="{AppThemeBinding Light=#F9F9F9, Dark=#1F1F1F}">
                    <Entry x:Name="txtBaslik" 
                           Placeholder="Örn: Sınav Çalışması" 
                           TextColor="{AppThemeBinding Light=Black, Dark=White}"
                           Margin="10,0"/>
                </Frame>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="5">
                <Label Text="Detay" FontAttributes="Bold" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                <Frame Padding="0" CornerRadius="8" BorderColor="Gray" HasShadow="False"
                       BackgroundColor="{AppThemeBinding Light=#F9F9F9, Dark=#1F1F1F}">
                    <Editor x:Name="txtDetay" 
                            Placeholder="Yapılacak işin detaylarını buraya yazın..." 
                            HeightRequest="120" 
                            TextColor="{AppThemeBinding Light=Black, Dark=White}"
                            Margin="10"/>
                </Frame>
            </VerticalStackLayout>

            <Grid ColumnDefinitions="*, *" ColumnSpacing="15">
                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="Tarih" FontAttributes="Bold" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                    <Frame Padding="0" CornerRadius="8" BorderColor="Gray" HasShadow="False"
                           BackgroundColor="{AppThemeBinding Light=#F9F9F9, Dark=#1F1F1F}">
                        <DatePicker x:Name="dpTarih" Format="dd/MM/yyyy" TextColor="{AppThemeBinding Light=Black, Dark=White}" Margin="5,0"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" Spacing="5">
                    <Label Text="Saat" FontAttributes="Bold" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                    <Frame Padding="0" CornerRadius="8" BorderColor="Gray" HasShadow="False"
                           BackgroundColor="{AppThemeBinding Light=#F9F9F9, Dark=#1F1F1F}">
                        <TimePicker x:Name="tpSaat" Format="HH:mm" TextColor="{AppThemeBinding Light=Black, Dark=White}" Margin="5,0"/>
                    </Frame>
                </VerticalStackLayout>
            </Grid>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,20,0,0">
                <Button Grid.Column="0" Text="İptal" Clicked="Iptal_Clicked" BackgroundColor="#E0E0E0" TextColor="Black" CornerRadius="10"/>
                <Button Grid.Column="1" Text="Kaydet" Clicked="Kaydet_Clicked" BackgroundColor="#512BD4" TextColor="White" CornerRadius="10"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>