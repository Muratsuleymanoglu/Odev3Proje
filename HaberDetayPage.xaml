<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Odev3Proje.HaberDetayPage"
             Title="Haber Detayı">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">
            <Image x:Name="imgHaber" HeightRequest="600" Aspect="AspectFill"/>

            <Label x:Name="lblBaslik" FontSize="22" FontAttributes="Bold" TextColor="Black"/>

            <Label x:Name="lblIcerik" FontSize="16" TextColor="Gray"/>

            <Button Text="Haberi Kaynağında Oku" Clicked="OnOpenWebClicked" BackgroundColor="#512BD4"/>

            <Button Text="Haberi Paylaş" Clicked="OnShareClicked" BackgroundColor="Gray" TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>